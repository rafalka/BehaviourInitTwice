<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviourInitTwice="clr-namespace:BehaviourInitTwice"
             x:Class="BehaviourInitTwice.MainPage">

    <ScrollView>
        <StackLayout
            x:Name="StackLayout"
            Padding="30,0"
            Spacing="25">
            <Label
                Text="PlatformBehavior.OnAttachedTo() is called twice"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                x:Name="CounterBtn"
                Text="Click to TestBehaviour to a StackLayout" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnAddBehaviourClicked"
                HorizontalOptions="Fill" />

        </StackLayout>
    </ScrollView>

</ContentPage>
